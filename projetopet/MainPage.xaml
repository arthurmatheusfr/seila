<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetopet.MainPage"
             Shell.NavBarIsVisible="false">
<Grid>
    <Image Source="fundopantano.jpeg"
           Aspect="AspectFill"/>

            
          <Grid.RowDefinitions>
           <RowDefinition Height="35"/>
           <RowDefinition Height="35"/>
           <RowDefinition Height="35"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
           <ColumnDefinition Width="35"/>
           <ColumnDefinition Width="*"/>
           </Grid.ColumnDefinitions>
           
      

          <Image Source="pinha.avif"
               HeightRequest="30"
               Aspect="AspectFit"
               Grid.Row="0"
               Grid.Column="0"/>
        
        
        <ProgressBar x:Name="BarradeProgressãoTristeza"
                     Progress="1"
                     BackgroundColor="White"
                     ProgressColor="Green"
                     Grid.Row="0"
                     Grid.Column="1"/>
        
        <Image x:Name="personagemimagem"
           HeightRequest="400"
           Margin="0"
           Aspect="AspectFill"/>
      

</Grid>
</ContentPage>
